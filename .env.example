# EA-Analyzer Environment Configuration Template
# Copy this file to .env and customize as needed

# Neo4j connection configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Docker configuration for Neo4j
NEO4J_CONTAINER_NAME=ea-analyzer-neo4j
NEO4J_IMAGE=neo4j:5.15-community
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Output formatting
USE_COLORS=true
VERBOSE_OUTPUT=false

# Example queries for the CLI (comma-separated)
EXAMPLE_QUERIES=MATCH (t:Transformer) RETURN t.id, t.name, t.hv_kv, t.lv_kv ORDER BY t.id;MATCH (b:Breaker) RETURN b.id, b.name, b.kv_class, b.continuous_a ORDER BY b.id;MATCH (r:RelayFunction)-[rel:PROTECTS]->(p) RETURN r.device_code, r.description, p.name, p.type ORDER BY r.device_code;MATCH (bus:Busbar)-[r:CONNECTS_TO]-(comp) RETURN bus.name, comp.type, comp.name, r.via ORDER BY bus.name, comp.type;MATCH (n) WHERE n:GridSource OR n:Transformer RETURN n.type, n.name, n.kv ORDER BY n.type, n.name
